<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
    </style>


    <style name="AppTheme.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@color/primaryTextColor</item>
    </style>


    <style name="Image_Center_Croped">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BaseTextView_Default_Padding_PrimaryLight_TextColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_text_padding</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>


    <!--    List Items    -->
    <style name="Base_List_Item">
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="ListItem_Podcast_Card" parent="Base_List_Item">
        <item name="android:layout_width">@dimen/list_item_podcast_default_width</item>
        <item name="android:layout_height">@dimen/list_item_podcast_default_width</item>
    </style>

    <style name="ListItem_Category_Card" parent="Base_List_Item">
        <item name="android:layout_width">@dimen/list_item_category_default_width</item>
        <item name="android:layout_height">@dimen/list_item_category_default_height</item>
        <!--<item name="android:orientation">vertical</item>-->
    </style>

    <style name="ListItem_Podcast_Image" parent="Image_Center_Croped">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">top|start</item>
    </style>

    <style name="ListItem_Podcast_Title" parent="BaseTextView_Default_Padding_PrimaryLight_TextColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_podcast_title_text_size</item>
        <item name="android:background">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:lines">1</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ListItem_Category_Title" parent="BaseTextView_Default_Padding_PrimaryLight_TextColor">
        <item name="android:textSize">@dimen/list_item_category_title_text_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">@dimen/half_default_text_padding</item>
    </style>

    <style name="ListItem_Podcast_Star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:visibility">invisible</item>
        <item name="android:elevation">4dp</item>
        <item name="android:src">@drawable/ic_star_pink_40dp</item>
    </style>

    <style name="ListItem_Episode_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textSize">@dimen/list_item_episode_title_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--    AppBar  -->
    <style name="CollapsingToolbarLayout">
        <item name="android:layout_height">@dimen/main_app_bar_default_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/AppTheme.ActionBar</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_gravity">top</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!--    FAB -->
    <style name="FAB" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="Podcaster_Title">
        <item name="android:lines">@integer/podcaster_title_lines</item>
        <item name="android:layout_width">@dimen/podcaster_title_default_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">@dimen/podcaster_title_text_size</item>
    </style>

    <style name="Episode_Title" parent="Podcaster_Title">
        <item name="android:layout_width">@dimen/episode_title_default_width</item>
        <item name="android:lines">@integer/episode_title_lines</item>
    </style>

    <!--    Portofolio Labels   -->
    <style name="Portofolio_Label">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/list_item_category_title_text_size</item>
    </style>

    <style name="Portofolio_Label.EditText" parent="Portofolio_Label">
        <item name="android:backgroundTint">@color/primaryTextColor</item>
        <item name="android:ems">@integer/editText_ems</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/primaryLightColor</item>
    </style>

    <style name="Portofolio_Spinner">
        <item name="android:layout_width">@dimen/portofolio_spiner_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <style name="Portofolio_EditText_Hint">
        <item name="android:layout_width">@dimen/podcast_app_bar_default_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textSize">@dimen/list_item_podcast_title_text_size</item>
    </style>

    <style name="Portofolio_Edit_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_edit_black_light_24dp</item>
    </style>

    <style name="Portofolio_ImageView">
        <item name="android:layout_width">@dimen/portofolio_podcast_poster_size</item>
        <item name="android:layout_height">@dimen/portofolio_podcast_poster_size</item>
        <item name="android:src">@drawable/ic_image_black_light_24dp</item>
        <item name="android:contentDescription">@string/podcast_poster_content_description</item>
    </style>

    <style name="Progress_Bar">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:visibility">invisible</item>
    </style>

    <dimen name="half_default_text_padding">4dp</dimen>

    <style name="InsertTextDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
